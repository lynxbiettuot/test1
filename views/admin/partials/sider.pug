.sider
  .inner-menu
    ul 
      li
        a(href= `/${prefixAdmin}/dashboard`) Tổng quan  
      if(role.permissions.includes("products_view"))
        li
          a(href= `/${prefixAdmin}/products`) Sản phẩm
      if(role.permissions.includes("products-category_view"))
