extends ../../layouts/default.pug
include ../../mixins/boxhead.pug

block main 
    h1 Trang chủ
     .container.my-3
        .row
            .col-12
                //- sau khi nhúng file, sử dụng hàm
                +box-head("Sản phẩm nổi bật")
        .row 
            each item in featureProduct
                //- //Nhớ lùi 1 tab 
                .col-4.mb-3 
                    .product-item   
                        .inner-image
                            a(href=`/products/detail/${item.slug}`) 
                                img(src = item.thumbnail, alt = item.title)
                        .inner-content
                            h3.inner-title 
                               a(href=`/products/detail/${item.slug}`) #{item.title}
                            .inner-price-new #{item.newPrice}$
                            .inner-price-old #{item.price}$
                            .inner-discount -#{item.discountPercentage}%
        
        .row
            .col-12
                //- sau khi nhúng file, sử dụng hàm
                +box-head("Sản phẩm mới")
        .row 
            each item in newProduct
                //- //Nhớ lùi 1 tab 
                .col-4.mb-3 
                    .product-item   
                        .inner-image
                            a(href=`/products/detail/${item.slug}`) 
                                img(src = item.thumbnail, alt = item.title)
                        .inner-content
                            h3.inner-title 
                               a(href=`/products/detail/${item.slug}`) #{item.title}
                            .inner-price-new #{item.newPrice}$
                            .inner-price-old #{item.price}$
                            .inner-discount -#{item.discountPercentage}%