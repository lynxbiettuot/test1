extends ../../layouts/default.pug
include ../../mixins/boxhead.pug

block main 
    h1 Trang chủ
    .container.my-3
        .row
            .col-12
                +box-head("Sản phẩm nổi bật")
        .row 
            each item in featureProduct 
                .col-4.mb-3
                    .product-item
                        .inner-image
                            a(href=`/products/detail/${item.slug}`)
                                img(src=item.thumbnail, alt=item.title)
                        .inner-content
                            h3.inner-title
                                a(href=`/products/detail/${item.slug}`) #{item.title}
                            .inner-price-new #{item.priceNew}$
                            .inner-price-old #{item.price}$
                            .inner-discount -#{item.discountPercentage}%
        
        .row
            .col-12
                +box-head("Sản phẩm mới")
        .row 
            each item in newProduct
                .col-4.mb-3 
                    .product-item   
                        .inner-image
                            a(href=`/products/detail/${item.slug}`) 
                                img(src = item.thumbnail, alt = item.title)
                        .inner-content
                            h3.inner-title 
                                a(href=`/products/detail/${item.slug}`) #{item.title}
                            .inner-price-new #{item.priceNew}$
                            .inner-price-old #{item.price}$
                            .inner-discount -#{item.discountPercentage}%